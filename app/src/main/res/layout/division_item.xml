<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="divisionItem"
            type="fd.firad.divisionsofbangladesh.model.Data" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:backgroundTint="#FFB55A"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@{divisionItem.division}"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/divisionbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/division"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@{divisionItem.divisionbn}"
                android:textColor="@color/black"
                android:textSize="26sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>